{
    "$schema": "https://json.schemastore.org/prettierrc",
    "trailingComma": "none",
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "arrowParens": "always",
    "bracketSpacing": false,
    "singleAttributePerLine": true,
    "proseWrap": "always",
    "overrides": [
        {
            "files": "*.vue",
            "options": {
                "printWidth": 150,
                "singleQuote": true,
                "bracketSpacing": false
            }
        }
    ]
}
